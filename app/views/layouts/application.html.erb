<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-debug</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
      <main>
        <p id="notice"><%= notice %></p>
        <div class="text-center mt-2">
          <div class="search-form">
          <% if user_signed_in? %>
          <%= form_with url: search_path, method: :get, local: true do |f| %>
           <%= f.text_field 'search[value]'  %>
           <%= f.select 'search[model]', options_for_select({ "User" => "user", "Book" => "book" }) %>
           <%= f.select 'search[how]', options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
           <%= f.submit '検索' %>
         <% end %>
         <% end %>
        </div>
        </div>
        <%= yield %>
      </main>
    <%= render 'layouts/footer' %>
  </body>
</html>